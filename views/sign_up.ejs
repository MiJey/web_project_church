<div class="user">
  <header class="user__header">
    <h1 class="user__title" id="signup_info">Welcome!</h1>
  </header>

  <form class="form" style="border: 2px solid;" name="form" method="post" action="\sign_up\register">
    <div class="form__group">
      <input type="text" placeholder="*이름" class="form__input" name="name" />
      <input type="text" placeholder="*아이디(4~12자)" class="form__input" name="userid" />
      <input type="password" placeholder="*비밀번호(4~12자)" class="form__input" name="password" />
      <input type="password" placeholder="*비밀번호확인(4~12자)" class="form__input" name="mypw_check" />
      <input type="text" placeholder="*전화번호" class="form__input" name="phone" />
      <input type="text" placeholder="*생년월일" class="form__input" name="birth" />
      <input type="text" placeholder="이메일(비밀번호 찾기)" class="form__input" name="email" />

      <input class="btn" type="button" value="회원가입" onclick="button_event();" />
      <script type="text/javascript">
        function button_event() {
          if (form.name.value == "") {
            document.getElementById("signup_info").innerHTML = "이름를 입력하세요";
            form.name.focus();
            return false;
          } else if (form.userid.value == "") {
            document.getElementById("signup_info").innerHTML = "아이디를 입력하세요";
            form.userid.focus();
            return false;
          } else if (form.password.value == "") {
            document.getElementById("signup_info").innerHTML = "비밀번호를 입력하세요";
            form.password.focus();
            return false;
          } else if (form.mypw_check.value == "") {
            document.getElementById("signup_info").innerHTML = "비밀번호 확인란을 입력해주세요";
            form.mypw_check.focus();
            return false;
          } else if (form.phone.value == "") {
            document.getElementById("signup_info").innerHTML = "전화번호를 입력하세요";
            form.phone.focus();
            return false;
          } else if (form.password.value != form.mypw_check.value) {
            document.getElementById("signup_info").innerHTML = "비밀번호가 일치하지 않습니다";
            document.form.password.value = "";
            document.form.mypw_check.value = "";
            document.form.password.focus();
            return false;
          } else if (form.password.value.length < 4 || form.password.value.length > 12) {
            document.getElementById("signup_info").innerHTML = "비밀번호를 4~12자까지 입력해주세요";
            form.password.focus()
            form.mypw_check.select()
            return false;
          } else if (form.userid.value.length < 4 || form.userid.value.length > 12) {
            document.getElementById("signup_info").innerHTML = "아이디를 4~12자까지 입력해주세요";
            form.userid.focus();
            form.userid.select();
            return false;
          } else if (form.birth.value == "") {
            document.getElementById("signup_info").innerHTML = "생년월일을 입력해주세요";
            form.birth.focus();
            form.birth.select();
            return false;
          } else {
            form.submit();
          }
        }
      </script>
    </div>
  </form>
</div>
