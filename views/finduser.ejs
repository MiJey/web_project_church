<html>
<div align="center">
  <h1>아이디 찾기</h1>
  <hr class="line"></hr>
  <form name="find_id_form" method="post">
     <table align="center" style="padding:5px 0 5px 0; ">
        <tr>
           <th>이름</th>
           <td><input type="text" name="name"></td>
        </tr>
        <tr>
            <th>전화번호</th>
            <td><input type="text" name="fst_ph">-<input type="text" name="mid_ph">-<input type="text" name="last_ph"></td>
        </tr>
      </table>

          <div class="btn">
            <input type="submit" onclick="button_event();" value="아이디 찾기">
            <script type="text/javascript">
              function button_event(){
                if (find_id_form.name.value == "") {
                  alert("이름을 입력하지 않았습니다.")
                  find_id_form.name.focus()
                  return false;
                }else if(find_id_form.fst_ph.value=="" || find_id_form.mid_ph.value=="" || find_id_form.last_ph.value==""){
                  alert("전화번호를 입력하지 않았습니다.")
                  find_id_form.fst_ph.focus();
                  return false;
                }
              }
            </script>
            <input type="button" onclick = "location.href = 'find_pw.html'" value="비밀번호 찾기">
            <input type="button" onclick = "location.href = 'sign_in.html'" value="로그인">
          </div>
  </form>


    <hr class="line"></hr>

  <h1>비밀번호 찾기</h1>
