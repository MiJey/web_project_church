<div class="user">
  <h1>비밀번호 찾기</h1>

  <header class="user__header">
    <h1 class="user__title" id="info"></h1>
    <% if(code == 401){ %>
    <script>
      document.getElementById("info").innerHTML = "아이디와 휴대폰 번호를 다시 한 번 확인해주세요.";
    </script>
    <% } %>
  </header>
  <form class="form" style="border: 2px solid;" method="post" action="/sign_in/find_password" name="form">
    <div class="form__group">
      <input type="text" placeholder="아이디" class="form__input" name="userid" autofocus/>
    </div>
    <div class="form__group">
      <input type="text" placeholder="휴대폰 번호" class="form__input" name="phone" />
    </div>
    <input class="btn" type="button" value="비밀번호 찾기" onclick="button_event();" />

    <script type="text/javascript">
      function button_event() {
        if (form.userid.value == "") {
          document.getElementById("info").innerHTML = "아이디를 입력하지 않았습니다.";
          form.userid.focus()
          return false;
        } else if (form.phone.value == "") {
          document.getElementById("info").innerHTML = "휴대폰 번호를 입력하지 않았습니다.";
          form.phone.focus();
          return false;
        }
        form.submit();
      }
    </script>

    <a class="btn" href="/sign_in">로그인 하러가기</a>
  </form>
</div>
